{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ]    
  },
  "include": [
    "./src"
  ]
}